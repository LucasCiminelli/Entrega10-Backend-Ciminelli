<div class="max-w-3xl mx-auto py-10">
  <h3 class="text-2xl font-bold mb-4">Bienvenido {{first_name}} {{last_name}}</h3>
  <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
    <a href="/logout">Logout</a>
  </button>

  <h1 class="text-3xl mb-4">PRODUCTOS</h1>

  <a href="/carts/651592616f484725392faa6b" class="text-2xl mb-4">ðŸ›’</a>

  <div class="grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {{#each products.payload}}
      <div class="p-6 bg-white rounded border">
        <p class="font-bold text-xl">{{this.title}}</p>
        <p class="text-gray-700">{{this.description}}</p>
        <p class="text-green-700">Precio: ${{this.price}}</p>
        <button class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded addToCartButton" data-product-id="{{this._id}}">
          Agregar al carrito
        </button>
      </div>
    {{/each}}
  </div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/products.js"></script>
</div>
