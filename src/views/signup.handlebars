<div class="max-w-md mx-auto bg-white rounded p-8 mt-10">
  <h1 class="text-2xl font-bold mb-4">Signup</h1>
  <form action="http://localhost:8080/api/signup" method="post" class="space-y-4">
    <input type="text" name="first_name" placeholder="First Name" class="w-full p-2 rounded border" />
    <input type="text" name="last_name" placeholder="Last Name" class="w-full p-2 rounded border" />
    <input type="text" name="email" placeholder="Email" class="w-full p-2 rounded border" />
    <input type="number" name="age" placeholder="Age" class="w-full p-2 rounded border" />
    <input type="password" name="password" placeholder="Password" class="w-full p-2 rounded border" />
    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Register</button>
  </form>
</div>
